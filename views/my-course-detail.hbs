<div class="container-fluid text-white title-courses-details">
    <div class="container-fluid py-4">
        <div class="row mx-3">
            <div class="col-md-9">
                <h1>{{course.courseName}}</h1>
                <h5>{{course.des}}</h5>
                <br>
                <p style="margin-bottom: 0.5rem;">
                    Created by: {{teacher}}
                </p>
            </div>
            <div class="col-md-3 p-0">
                <img class="" style="max-height: 13rem" src="{{course.imageUrl}}">
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mx-md-4 mx-2 my-4">
    <div class="container">
        <div class="row">
            <div class="col-7"><h3>Lessons</h3>
                {{#each course.lessons}}
                <a class="btn btn-outline-dark lesson-btn w-100 mb-2" href="/mylearning/lesson/{{this._id}}">
                    {{this.title}}
                </a>
                {{/each}}
            </div>
            <div class="col-5" style="padding-right: 3rem; text-align: right;"><h3>Members</h3>
                {{#each members}}
                <p class="my-3">{{this.first_name}} {{this.last_name}}</p>
                {{/each}}
            </div>
        </div>   
    </div>
</div>